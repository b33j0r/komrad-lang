Server = {
	port = 8080
	host = "localhost"
	listener = null

	[start] {
		Log info "Starting server on http://" + host + ":" + port
		listener = spawn HttpListener {
			port: port
			host: host
			delegate: me
		}
	}

	[http _req _res GET] {
		res template "examples/templates/welcome.html" {
			title: "Komrad"
		}
	}
}

server = spawn Server {
	host: "0.0.0.0"
}
